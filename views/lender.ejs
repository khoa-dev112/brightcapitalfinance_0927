<%- include ('partials/header') -%>

<div class="container container-header">
<!-- <header class="jumbotron"> -->
    <div class = "container py-5">
        <span><img src="../../public/img/BCF_logo.jpg" alt="">Logo</span>
        <h1 class="display-1">Bright Capital Finance</h1>
        <div class="card shadow-2-strong">
          <div class="card-body p-5 text-center" style="background-color: #D6E1E4;">
            <h1 class="display-6">For a brighter future</h1>
            <form action="/input1" method="POST" class="inner-outer-container py-4">
                <!-- Row 0 of the form  -->
                <div class="row">
                    <div class="col-lg-12 py-2">
                        <div class="row g-2">
                            <div class="col-md">
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="floatingInput" placeholder="" required>
                                    <label for="floatingInput">Lender Company Name</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="floatingPassword" placeholder="" required>
                                    <label for="floatingPassword">First Name</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="floatingPassword" placeholder="" required>
                                    <label for="floatingPassword">Last Name</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="floatingPassword" placeholder="" required>
                                    <label for="floatingPassword">Job Title</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="floatingPassword" placeholder="">
                                    <label for="floatingPassword">Business Phone</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="floatingPassword" placeholder="" required>
                                    <label for="floatingPassword">Mobile Phone</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="floatingPassword" placeholder="" required>
                                    <label for="floatingPassword">Email Address</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="floatingPassword" placeholder="" required>
                                    <label for="floatingPassword">Street Address</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="floatingPassword" placeholder="" required>
                                    <label for="floatingPassword">City</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="floatingPassword" placeholder="" required>
                                    <label for="floatingPassword">Post Code</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="floatingPassword" placeholder="" required>
                                    <label for="floatingPassword">State</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="floatingPassword" placeholder="" required>
                                    <label for="floatingPassword">Country</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="floatingPassword" placeholder="" required>
                                    <label for="floatingPassword">Minimum Loan Lend</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="floatingPassword" placeholder="" required>
                                    <label for="floatingPassword">Maximum Loan Lend</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                    <label class="form-check-label" for="flexCheckDefault">
                                      Default checkbox
                                    </label>
                                  </div>
                                  <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked>
                                    <label class="form-check-label" for="flexCheckChecked">
                                      Checked checkbox
                                    </label>
                                  </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
      </div>
    </div>

<!-- </header> -->

</div>

<div class="container container-actions">
    <div class = "row">
        <div class = "col-lg-12">
            
                
            
        </div>
    </div>
</div>


