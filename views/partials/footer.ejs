<script type="text/javascript">
    $('option').mousedown(function(e) {
      e.preventDefault();	
      
      $(this).prop('selected', $(this).prop('selected') ? false : true);

      // attach optional-required functionality to selects
      optionalRequiredSectionUpdate($(this).parents('.optional-required')[0]);
      
      //alert($("#floatingSelectGrid:selected").length);//select option selected count
      //if($("#mySelect :selected").length==2)
      //some stuff

      return false;
      });

      // optional-required functionality, given a section HTML element make inputs required or not required depending on selected options
      function optionalRequiredSectionUpdate(section) {
        // check if there is at least option element in the section that has a data-required attribute and is selected
        let inputsRequired = Array.from(section.querySelectorAll('option[data-required]')).filter((option) => {
          return option.selected == true;
        }).length > 0;

        // if there was one, set all number inputs of the section to be required, otherwise set them to be non-required
        let inputs = section.querySelectorAll('input[type="number"]');
        if (inputsRequired) {
          inputs.forEach((input) => {
            input.setAttribute('required', true);
          });
        } else {
          inputs.forEach((input) => {
            input.removeAttribute('required');
          });
        }
      }

      // update all sections at once, used on page load and when select/unselect all buttons are used
      function optionalRequiredSectionUpdateAll() {
        let sections = document.querySelectorAll('.optional-required');
        sections.forEach((section) => {
            optionalRequiredSectionUpdate(section);
        });
      }

      // optional-required: initialize the required values on page load for all sections
      window.addEventListener('load', function() {
        optionalRequiredSectionUpdateAll();
      });

    </script>

   
      

